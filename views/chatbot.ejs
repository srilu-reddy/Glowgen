    />
    <link rel="stylesheet" href="/css/chatbot.css" />
    <script src="/js/chatbot.js" defer></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg fixed-top">
      <div class="container-fluid d-flex">
        <a class="navbar-brand fw-bold honk-logo" href="/"> Code Crafters </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav">
            <li class="nav-item mx-2">
              <a
                class="nav-link text-light rounded px-2 source-sans-3-regular"
                href="/"
                >Get Proposal</a
              >
            </li>
            <li class="nav-item mx-2">
              <a
                class="nav-link text-light rounded px-2 source-sans-3-regular"
                href="/chatbot"
                >Chat</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Chatbot Toggle Button -->
    <!-- <button class="chatbot-toggler" onclick="toggleChatbot()">
    <i class="fa-solid fa-comment"></i>
</button> -->
    <div
      class="hero-section d-flex flex-column align-items-center justify-content-evenly"
    >
      <p class="source-sans-3-regular text-light fs-3 btn-shine">
        <img src="gemini-brand-color.svg" alt="gemini" width="80%" />
        Proposal AI
      </p>
      <div>
        <p class="source-sans-3-bold text-light text-center headline">
          Chat with Our AI-Powered Software Consultant
        </p>
        <p class="source-sans-3-regular text-light subtext">
          Get instant answers, refine project requirements, and generate
          structured proposals—right within our smart chatbot.
        </p>
      </div>
      <button class="btn purple-btn px-4 py-2">
        <a
          href="#start-chatting"
          class="source-sans-3-regular text-light text-decoration-none"
          >Start chatting</a
        >
      </button>
    </div>
    <!-- Chatbot Container -->
    <div
      class="container d-flex justify-content-center py-5 my-5"
      id="start-chatting"
    >
      <div class="chatbot-container">
        <!-- <div class="chatbot-header">
          <h2>AI Chatbot</h2>
          <button class="close-btn" onclick="toggleChatbot()">✕</button>
        </div> -->

        <ul class="chatbox source-sans-3-regular"></ul>

        <div class="chat-input">
          <input
            id="question"
            class="source-sans-3-regular"
            placeholder="Type a message..."
            required
          />
          <button class="send-btn purple-btn">
            <i class="fa-solid fa-paper-plane"></i>
          </button>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.js"
      integrity="sha512-+maVcOki4j7Zo1VOqbhjH/fKV7iuE9WYMdhObx1ozxz2xu3qZMVCGHOAZKLKLksakyaWllQzafnLZSGBRl3lRg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/vanta/0.5.24/vanta.net.min.js"
      integrity="sha512-lH/5/byfwH0bqySiiSINJJoEoWFEBGKgOwsnAlZZPviNJI1DDBVXjPHgEkM0fowfOp6NMBAN4ROAYjx+uEkEjQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script>
      // Function to re-initialize Vanta.js
      function reinitializeVanta() {
        // First, destroy the existing Vanta instance
        if (VANTA.current) {
          VANTA.current.destroy();
        }
        // Then, initialize a new Vanta instance
        VANTA.NET({
          el: "body",
          mouseControls: true,
          touchControls: true,
          gyroControls: false,
          minHeight: 200.0,
          minWidth: 200.0,
          scale: 1.0,
          scaleMobile: 1.0,
          color: 0x3fc7ff,
        });
      }
    </script>
    <script>
      VANTA.NET({
        el: "body",
        mouseControls: true,
        touchControls: true,
        gyroControls: false,
        minHeight: 200.0,
        minWidth: 200.0,
        scale: 1.0,
        scaleMobile: 1.0,
        color: 0x3fc7ff,
      });
    </script>
  </body>
</html>
